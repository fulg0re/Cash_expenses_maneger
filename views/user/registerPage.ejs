<% layout('../layout/authenticationLayout.ejs') -%>

<form action="/authentication/register" method="post">

    <h1 class="page-content-title">Register page</h1>

    <div class="form-group">
        <input type="text" class="form-control auth-input" name="login" placeholder="Login">
    </div>
    <div class="form-group">
        <input type="email" class="form-control auth-input" name="email" placeholder="Email">
    </div>
    <div class="form-group">
        <input type="password" class="form-control auth-input" name="password" placeholder="Password">
    </div>
    <div class="form-group">
        <input type="password" class="form-control auth-input" name="passwordConfirmation" placeholder="Confirm password">
    </div>

    <a href="/authentication/login">To login page</a>

    <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
</form>