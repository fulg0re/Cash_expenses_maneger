<% layout('../layout/authenticationLayout.ejs') -%>

<form action="/authentication/login" method="post">

    <h1 class="page-content-title">Login page</h1>

    <div class="form-group">
        <input type="text" class="form-control auth-input" name="login" placeholder="Login">
    </div>
    <div class="form-group">
        <input type="password" class="form-control auth-input" name="password" placeholder="Password">
    </div>

    <a href="/authentication/register">To register page</a>

    <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
</form>